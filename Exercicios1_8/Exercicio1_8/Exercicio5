    <script>
        function ExibeDadoDigitado(){
            var nota = document.getElementById("Nota1").value;
            var nota2 = document.getElementById("Nota2").value;
            var resultado = Number(Nota1) + Number(Nota2);
            var divisao = resultado / 2 ;
            alert(" " + Nota1+ " + " + Nota2 + " = " + resultado + " / " + divisao);
        }
</script>
