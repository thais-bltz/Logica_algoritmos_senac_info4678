    <button onclick="emprestimo()">Click Aqui </button>
    <script>
         function emprestimo(){
            var valorcasa = document.getElementById("valorcasa").value;
            var salario = document.getElementById("salario").value;
            var anopagar = document.getElementById("anopagar").value;
            var trinta = (salario * 30)/100;
            var mensal = anopagar * 12;
            
            var mes = valorpagar/mensal;
            if (trinta >= mes){
                alert (" Emprestimo Aprovado")
            }
            else{
                alert(" Emprestimo Negado")
            }
    }              
            
    </script>
