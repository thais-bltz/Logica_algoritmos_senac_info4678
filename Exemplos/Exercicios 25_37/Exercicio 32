    <button onclick="KM()">Click Aqui </button>
    <script>
         function KM(){
            var random = Math.trunc(Math.random()*6);
            var valor = document.getElementById("valor").value;
            if (valor == random){
                alert ("Você acertou")}
            else {
                alert ("você errou, tente novamente")
            }  
    }              
            
    </script>
