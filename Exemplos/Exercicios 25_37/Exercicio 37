<body>
    <br><input type="text" id="salarioatual" placeholder="salario atual">
    <br><select id = sexo >
        <option value="" selected disabled>Selecione o sexo</option>
        <option value="Masculino">MASCULINO</option>
        <option value="Feminino">FEMININO</option>
    </select>
    <br><input type="text" id="anosempresa" placeholder="anos de empresa">
 
    <button onclick="show()">Entrar </button>
    <script>
         function show(){
            var salario =  Number(document.getElementById("salarioatual").value);
            var sexo = document.getElementById("sexo").value;
            var anosempresa = document.getElementById("anosempresa").value;
            if(sexo == "Feminino")
            {
                if (anosempresa <= 15)
                {
                    var final = (salario * 0.05) + salario;
                    alert("Obrigado pelo seu empenho todos esses anos na empresa e por isso seu salario sai de " + salario + " para " + final)
                }   
                else if (anosempresa > 15 && anosempresa <=20)
                {
                    var final1 = (salario * 0.12) + salario;
                    alert("Obrigado pelo seu empenho todos esses anos na empresa e por isso seu salario saida de " + salario + " para " + final1)
                }
                else 
                {
                    var final2 = (salario * 0.23) + salario;
                    alert("Obrigado pelo seu empenho todos esses anos na empresa e por isso seu salario saida de " + salario + " para " + final2)
                }
            }else{
                if (anosempresa < 20){
                    var final3 = (salario * 0.03) + salario;
                    alert("Obrigado pelo seu empenho todos esses anos na empresa e por isso seu salario saida de " + salario + " para " + final3)                          
                }
                else if (anosempresa >= 20 && anosempresa <=30)
                {
                    var final4 = (salario * 0.13) + salario;
                    alert("Obrigado pelo seu empenho todos esses anos na empresa e por isso seu salario saida de " + salario + " para " + final4)
                }else{
                    var final5 = (salario * 0.25) + salario;
                    alert("Obrigado pelo seu empenho todos esses anos na empresa e por isso seu salario saida de " + salario + " para " + final5)
                }
            }}
        
    </script>
</body>
