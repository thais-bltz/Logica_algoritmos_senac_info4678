    <br><input type="text" id="KM">

    <button onclick="KM()">Click Aqui </button>
    <script>
         function KM(){
            var KM = document.getElementById("KM").value;
            var KM200= KM * 0.50;
            var KMmais200 = KM * 0.45;
      
        if(KM <= 200) {

			alert("Sua distância percorrida será de " + KM + "km, e o valor a ser pago será de R$" + KM200);
        }
        else
        {
            alert("Sua distância percorrida será de " + KM + "km, e o valor a ser pago será de R$" + KMmais200);

        }
    }
</script>
