    <script>
         function ALISTAMENTO(){
            var ALISTAMENTO = document.getElementById("ALISTAMENTO").value;
            var IDADE = 2025 - ALISTAMENTO;
        if(IDADE > 18){
            alert("APTO AO SERVIÇO MILITAR")
        }
        else{
            var FINAL =18 - IDADE;
             alert("VOCÊ NÃO TEM IDADE SUFICIENTE PARA O ALISTAMENTO MILITAR AINDA FALTAM" + "  " + FINAL + " ANOS ");
        }

    }
    </script>
