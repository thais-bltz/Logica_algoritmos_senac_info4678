    <button onclick="ImparPar()">Click Aqui </button>
    <script>
         function ImparPar(){
            var Par = document.getElementById("Par").value;
      
        if(Par %2 == 0){
            alert("Numero Par");
        }
        else{
            alert("Numero Impar");
        }
    }
</script>
